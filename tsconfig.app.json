{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "node"],
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/core/*"],
      "@systems/*": ["src/systems/*"],
      "@config/*": ["src/config/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@scenes/*": ["src/scenes/*"],
      "@assets/*": ["src/assets/*"],
      "@ui/*": ["src/ui/*"],
      "@network/*": ["src/network/*"]
    }
  },
  "include": ["src"]
}
