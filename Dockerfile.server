FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY U2.sln ./
COPY src ./src

RUN dotnet restore U2.sln
RUN dotnet publish src/server/U2.Server.csproj -c Release -o /app/publish /p:UseAppHost=false

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

COPY --from=build /app/publish .

EXPOSE 8080/tcp
EXPOSE 7777/udp

ENTRYPOINT ["dotnet", "U2.Server.dll", "--network"]
